{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 2,
    "final_space": true,
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "type": "session",
                    "style": "plain",
                    "foreground": "#F92672",
                    "template": "{{ .UserName }}<#ffffff> on </><#F92672>{{ .HostName }}<#ffffff>{{ if .SSHSession }} \ueba9{{ end }}</> "
                },
                {
                    "type": "path",
                    "style": "plain",
                    "foreground": "#A6E22E",
                    "properties": {
                        "style": "agnoster_full"
                    }
                },
                {
                    "type": "git",
                    "style": "plain",
                    "foreground": "#e2e22e",
                    "properties": {
                        "branch_icon": "\ue725 ",
                        "fetch_stash_count": true,
                        "fetch_status": true,
                        "fetch_upstream_icon": true,
                        "fetch_worktree_count": true
                    },
                    "template": " <#ffffff>{{.UpstreamIcon}}{{ .HEAD }}</>{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} "
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "shell",
                    "style": "plain",
                    "foreground": "#A6E22E",
                    "template": "{{.Name }}"
                },
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#ffffff",
                    "template": " \u279c"
                }
            ],
            "type": "prompt"
        }
    ]
}